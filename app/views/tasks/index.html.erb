<h1>All tasks:</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
  <%= task.completed %>
  <%= link_to task.title, task_path(task)  %>
  <%= link_to "Delete",
  destroy_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}
  %>
  </li>
<% end %>
</ul>
<%= link_to "Add a new task", new_path %>
